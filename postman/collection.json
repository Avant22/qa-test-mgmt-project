{
  "info": {
    "name": "QA Project API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Products",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/products",
          "host": ["{{baseUrl}}"],
          "path": ["products"]
        }
      }
    },
    {
      "name": "Login - Valid",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{ \"username\": \"user1\", \"password\": \"password123\" }"
        },
        "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth","login"] }
      }
    },
    {
      "name": "Login - Invalid",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{ \"username\": \"user1\", \"password\": \"wrongpass\" }"
        },
        "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth","login"] }
      }
    },
    {
      "name": "Get Cart",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/carts/1",
          "host": ["{{baseUrl}}"],
          "path": ["carts","1"]
        }
      }
    }
  ]
}
